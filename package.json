{
  "name": "px2vw",
  "displayName": "px2vw",
  "description": "css px to vw",
  "version": "0.0.1",
  "publisher": "your-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://example.com/your-repo.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px2vw.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "px2vw.convert",
        "title": "px2vw: 轉換自訂設計稿寬度 px 為 vw"
      }
    ],
    "keybindings": [
      {
        "command": "px2vw.convert",
        "key": "ctrl+alt+v",
        "when": "editorTextFocus && !inputFocus"
      },
      {
        "command": "px2vw.convert",
        "key": "cmd+alt+v",
        "when": "editorTextFocus && !inputFocus",
        "mac": "cmd+alt+v"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "px2vw",
      "properties": {
        "px2vw.designWidth": {
          "type": "number",
          "default": 1920,
          "minimum": 1,
          "description": "預設設計稿寬度（當只選取純 px，如 160px 時會使用此寬度換算）。"
        },
        "px2vw.decimals": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 6,
          "description": "小數位數。"
        },
        "px2vw.enableTypingDetection": {
          "type": "boolean",
          "default": true,
          "description": "輸入完整 <設計寬度>.<px>px（如 1920.160px）時顯示 QuickPick 提示轉換。"
        }
      }
    }
  },
  "activationEvents": [
    "onCommand:px2vw.convert",
    "onCommand:px2vw.helloWorld",
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
